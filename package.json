{
  "name": "basztavision",
  "version": "0.1.0",
  "description": "CCTV system for Pub Baszta",
  "author": "Komoszek",
  "gypfile": true,
  "build": {
    "appId": "basztavision"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "chokidar": "^3.5.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.0",
    "find-remove": "^3.1.0",
    "module-alias": "^2.2.2"
  },
  "_moduleAliases": {
    "@public": "public"
  },
  "scripts": {
    "start-react": "react-scripts start",
    "build-module": "node-gyp rebuild && cp ./build/Release/grabber.node ./public/grabber.node",
    "build-react": "react-scripts build",
    "test-react": "react-scripts test --env=jsdom",
    "eject-react": "react-scripts eject",
    "build-electron": "electron-builder",
    "build": "npm run-script build-module && npm run-script build-react && npm run-script build-electron",
    "start": "concurrently \"cross-env BROWSER=none npm run-script start-react\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "bulma": "^0.9.2",
    "bulma-switch": "^2.0.0",
    "concurrently": "^6.1.0",
    "cross-env": "^7.0.3",
    "electron": "^12.1.0",
    "electron-builder": "^22.11.1",
    "node-addon-api": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "sass": "^1.32.12",
    "wait-on": "^5.3.0"
  }
}
